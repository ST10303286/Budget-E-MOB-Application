<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Help Center Title -->
    <TextView
        android:id="@+id/helpCenterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_center_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tab Row (FAQ and Contact Us) -->
    <LinearLayout
        android:id="@+id/tabRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/helpCenterTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- FAQ Tab -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/faqTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faq"
                android:textColor="#BDBDBD"
                android:textSize="16sp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Contact Us Tab -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginStart="32dp">

            <TextView
                android:id="@+id/contactUsTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_us"
                android:textColor="#0D54E1"
                android:textSize="16sp"
                android:padding="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#0D54E1" />
        </LinearLayout>
    </LinearLayout>

    <!-- Contact Options List -->
    <LinearLayout
        android:id="@+id/contactOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/tabRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Customer Service -->
        <LinearLayout
            android:id="@+id/customerServiceRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/contact_button_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/customer_service_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_customer_service"
                android:contentDescription="@string/customer_service" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer_service"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- WhatsApp -->
        <LinearLayout
            android:id="@+id/whatsappRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/contact_button_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/whatsapp_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_whatsapp"
                android:contentDescription="@string/whatsapp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/whatsapp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Facebook -->
        <LinearLayout
            android:id="@+id/facebookRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/contact_button_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/facebook_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_facebook1"
                android:contentDescription="@string/facebook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/facebook"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Twitter -->
        <LinearLayout
            android:id="@+id/twitterRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/contact_button_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/twitter_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_twitter"
                android:contentDescription="@string/twitter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/twitter"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Instagram -->
        <LinearLayout
            android:id="@+id/instagramRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/contact_button_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/instagram_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_instagram"
                android:contentDescription="@string/instagram" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instagram"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginStart="16dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
